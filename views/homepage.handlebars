<div class="row align-center mb-5">
  <div class="col-md-6">
    <h2>Create a Flash Deck</h2>
  </div>

<div>
  {{#if decks.length}}
  <div class="col-md-6 project-list">
    <h3>Current Decks:</h3>

    {{#each decks as |deck|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/deck/{{deck.id}}">{{deck.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{deck.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

