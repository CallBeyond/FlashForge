<div class="row align-center mb-5">
  <div class="col-md-6">
    <h2>Create a Flash Deck</h2>
  </div>

<div>
  {{#if decks.length}}
  <div class="col-md-6 project-list">
    <h3>Current Decks:</h3>

    {{#each decks as |deck|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/deck/{{deck.id}}">{{deck.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{deck.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

  
<div class="flashcard-container">
  <div class="flashcard">
    <div class="front">
      <h2>Question</h2>
      <p>Question content here...</p>
    </div>
    <div class="back">
      <h2>Answer</h2>
      <p>Answer content here...</p>
    </div>
  </div>
</div>

<div class="flashcard-form">
  <h2>Create a Flashcard</h2>
  <form id="flashcardForm">
    <label for="question">Question:</label><br>
    <input type="text" id="question" name="question"><br>
    <label for="answer">Answer:</label><br>
    <input type="text" id="answer" name="answer"><br>
    <button type="submit">Create Flashcard</button>
  </form>
</div>
